generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  provider  String
  image     String?
  oauthId   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
